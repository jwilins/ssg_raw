{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build",
			"type": "shell",
			"command": "build.bat",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": "$msCompile",
			"options": {
				// CMD most likely starts up much faster than PowerShell.
				"shell": {
					"executable": "cmd",
					"args": ["/d", "/c"]
				}
			}
		}
	]
}
